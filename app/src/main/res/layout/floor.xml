<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dasboard_activity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="32dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF"
        tools:layout_editor_absoluteY="32dp">


        <ImageView
            android:id="@+id/amazonImage"
            android:layout_width="154dp"
            android:layout_height="142dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_image_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/wewe2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amazonImage">

            <androidx.cardview.widget.CardView
                android:id="@+id/clothingCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="264dp">

                <RelativeLayout
                    android:id="@+id/floor1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="264dp">

                    <TextView
                        android:id="@+id/clothingName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clothingImage"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="20dp"
                        android:text="1st Floor"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="71dp"
                        tools:layout_editor_absoluteY="334dp" />

                    <ImageView
                        android:id="@+id/clothingImage"
                        android:layout_width="73dp"
                        android:layout_height="84dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="51dp"
                        android:src="@drawable/one"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="264dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="264dp">

                <RelativeLayout
                    android:id="@+id/floor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="216dp"
                    tools:layout_editor_absoluteY="264dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/clothingImage4"
                        android:layout_width="73dp"
                        android:layout_height="84dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="51dp"
                        android:src="@drawable/two"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="264dp" />

                    <TextView
                        android:id="@+id/clothingName3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clothingImage4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="51dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="26dp"
                        android:text="2nd Floor"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="71dp"
                        tools:layout_editor_absoluteY="334dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="443dp">

                <RelativeLayout
                    android:id="@+id/floor3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    tools:layout_editor_absoluteX="20dp"
                    tools:layout_editor_absoluteY="443dp">

                    <ImageView
                        android:id="@+id/clothingImage5"
                        android:layout_width="73dp"
                        android:layout_height="84dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="51dp"
                        android:src="@drawable/three"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="264dp" />

                    <TextView
                        android:id="@+id/clothingName4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clothingImage5"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="22dp"
                        android:text="3rd Floor"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="71dp"
                        tools:layout_editor_absoluteY="334dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="443dp">

                <RelativeLayout
                    android:id="@+id/floor4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="216dp"
                    tools:layout_editor_absoluteY="443dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/clothingImage6"
                        android:layout_width="73dp"
                        android:layout_height="84dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="51dp"
                        android:src="@drawable/four"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="264dp" />

                    <TextView
                        android:id="@+id/clothingName5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clothingImage6"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="4th Floor"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="71dp"
                        tools:layout_editor_absoluteY="334dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="429dp"
            android:layout_height="62dp"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/teal_200"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001"
            app:title="Floors - Building 1"
            app:titleTextColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>